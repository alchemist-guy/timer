<!-- Sign-up Form -->
<div class="max-w-md mx-auto mt-8 p-6 bg-white shadow-lg rounded-md">
  <h2 class="text-2xl font-semibold text-center mb-6">Sign up as Admin</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <!-- Error Messages -->
    <%= render "admin/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="mb-5">
      <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Password Field -->
    <div class="mb-5">
      <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="mb-5">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Sign-up Button -->
    <div class="text-center">
      <%= f.submit "Sign up", class: "bg-blue-600 text-white font-semibold py-2 px-6 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <!-- Additional Links -->
  <div class="mt-6 text-center">
    <%= render "admin/shared/links" %>
  </div>
</div>
