<!-- Devise Related Links -->
<div class="max-w-md mx-auto mt-6 bg-white p-6 rounded-md shadow-lg text-center space-y-4">
  <h2 class="text-2xl font-bold text-gray-800 mb-4">Account Options</h2>

  <div class="space-y-3">
    <!-- Log In -->
    <% if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <% end %>

    <!-- Sign Up -->
    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <% end %>

    <!-- Forgot Password -->
    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <% end %>

    <!-- Confirmation Instructions -->
    <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <% end %>

    <!-- Unlock Instructions -->
    <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <% end %>

    <!-- Omniauth Providers -->
    <% if devise_mapping.omniauthable? %>
      <div class="flex flex-col items-center space-y-2">
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
