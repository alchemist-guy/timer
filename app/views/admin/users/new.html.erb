<!-- app/views/admin/users/new.html.erb -->
<div class="container mx-auto px-4 py-6 pl-80">
  <h1 class="text-2xl font-semibold mb-4">Add New User</h1>

  <div class="bg-white p-6 rounded-lg shadow-md">
    <%= form_with(model: @user, url: admin_users_path, local: true, class: "space-y-4") do |form| %>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :email, class: "mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, class: "mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2" %>
      </div>

      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, class: "mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2" %>
      </div>

      <div>
        <%= form.submit 'Create User', class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to 'Back to User List', admin_users_path, class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
  </div>
</div>
